---
import Button from 'src/components/basic/Button.astro'
import Layout from 'src/layouts/Layout.astro'

---
<Layout title="Крипто школа" description="Крипто школа">
  <div class="container">
    <div class="account-layout">
      <div class="account-layout-column account-layout-sidebar">
        <div class="account-layout-column-slice account-layout-sidebar__top">
          <div class="account-menu">
            <div class="account-menu-info">
              <div class="account-menu-info-avatar">
                <div class="account-menu-info-avatar__circle">
                  <span class="icon-profile"></span>
                </div>
              </div>
              <div class="account-menu-info__content">
                <div class="account-menu-info-lessons">
                  <div class="account-menu-info-lessons-icon">
                    <span class="icon-videos"></span>
                  </div>
                  <div class="account-menu-info-lessons__amount text-small">12 уроків</div>
                </div>
                <div class="account-menu-info__name text">Володимір</div>
              </div>
            </div>
      
            <a href="#" class="account-menu-item account-menu-item_active">
              <div class="account-menu-item__icon">
                <span class="icon-dashboard color-primary"></span>
              </div>
      
              <div class="account-menu-item__name text color-primary">Dashboard</div>
            </a>
      
            <a href="#" class="account-menu-item">
              <div class="account-menu-item__icon">
                <span class="icon-video-play color-primary"></span>
              </div>
      
              <div class="account-menu-item__name text color-primary">Навчання</div>
            </a>
      
            <a href="#" class="account-menu-item">
              <div class="account-menu-item__icon">
                <span class="icon-rate color-primary"></span>
              </div>
      
              <div class="account-menu-item__name text color-primary">Мій тариф</div>
            </a>
      
            <a href="#" class="account-menu-item">
              <div class="account-menu-item__icon">
                <span class="icon-referral color-primary"></span>
              </div>
      
              <div class="account-menu-item__name text color-primary">Реферальна програма</div>
            </a>
      
            <a href="#" class="account-menu-item">
              <div class="account-menu-item__icon">
                <span class="icon-settings color-primary"></span>
              </div>
      
              <div class="account-menu-item__name text color-primary">Налаштування</div>
            </a>
      
            <a href="#" class="account-menu-item">
              <div class="account-menu-item__icon">
                <span class="icon-exit color-primary"></span>
              </div>
      
              <div class="account-menu-item__name text color-primary">Вийти</div>
            </a>
          </div>
        </div>

        <div class="account-layout-column-slice account-layout-sidebar__bottom">
          <div class="account-block account-rating">
            <h5 class="account-block__title">
              <span class="icon-thunder color-orange"></span>
              <span class="text">Рейтинг</span>
            </h5>
  
            <table class="account-table account-rating-table">
              <thead class="account-table-head">
                <td class="account-table-head__column">Місце</td>
                <td class="account-table-head__column">Імя та призвище</td>
                <td class="account-table-head__column">Creoin</td>
              </thead>
              <tbody class="account-table-body">
                <tr class="account-table-body__item">
                  <td class="account-table-body__column text-small color-primary">1</td>
                  <td class="account-table-body__column text-small">danicon01</td>
                  <td class="account-table-body__column color-orange">
                    <span class="text-small color-orange">+5</span>
                    <img src="./assets/img/dashboard/statistics-star.svg">
                  </td>
                </tr>
                <tr class="account-table-body__item">
                  <td class="account-table-body__column text-small color-primary">2</td>
                  <td class="account-table-body__column text-small">danicon01</td>
                  <td class="account-table-body__column color-orange">
                    <span class="text-small color-orange">+5</span>
                    <img src="./assets/img/dashboard/statistics-star.svg">
                  </td>
                </tr>
                <tr class="account-table-body__item">
                  <td class="account-table-body__column text-small color-primary">3</td>
                  <td class="account-table-body__column text-small">danicon01</td>
                  <td class="account-table-body__column color-orange">
                    <span class="text-small color-orange">+5</span>
                    <img src="./assets/img/dashboard/statistics-star.svg">
                  </td>
                </tr>
                <tr class="account-table-body__item">
                  <td class="account-table-body__column text-small color-primary">4</td>
                  <td class="account-table-body__column text-small">danicon01</td>
                  <td class="account-table-body__column color-orange">
                    <span class="text-small color-orange">+5</span>
                    <img src="./assets/img/dashboard/statistics-star.svg">
                  </td>
                </tr>
              </tbody>
            </table>

            <button class="account-more">
              <span class="text-small color-primary">Показати ще</span>
              <span class="icon-arrow-right-small color-orange account-more__icon"></span>
            </button>
          </div>
        </div>
      </div>

      <div class="account-layout-column account-layout-center">
        <div class="account-layout-column-slice account-layout-center__top">
          <div class="account-greeting">
            <div class="account-greeting__left">
              <div class="account-greeting__date text">Четвер, 05 Грудня</div>
              <h5 class="account-greeting__name h5 color-primary">Привіт, Володимір</h5>
            </div>
      
            <div class="account-greeting-payment">
              <div class="account-greeting-payment__title text-small color-primary">
                Передплата діє до 8 січня 2025 р.
              </div>
              
              <Button small white>
                <span class="button__text">Продлити</span>
              </Button>
            </div>
          </div>
        </div>

        <div class="account-layout-column-slice account-layout-center-bottom">
          <div class="account-block account-statistics">
            <div class="account-statistics-item">
              <div class="account-statistics-item__icon">
                <img src="./assets/img/dashboard/statistics-star.svg" alt="">
              </div>
              <h5 class="account-statistics-item__value h5 color-primary">341</h5>
              <div class="account-statistics-item__description text-small">Отримано поінтів</div>
            </div>
      
            <div class="account-statistics-item">
              <div class="account-statistics-item__icon">
                <img src="./assets/img/dashboard/statistics-calendar.svg" alt="">
              </div>
              <h5 class="account-statistics-item__value h5 color-primary">304</h5>
              <div class="account-statistics-item__description text-small">Днів на проєкті</div>
            </div>
      
            <div class="account-statistics-item">
              <div class="account-statistics-item__icon">
                <img src="./assets/img/dashboard/statistics-profit.svg" alt="">
              </div>
              <h5 class="account-statistics-item__value h5 color-primary">6</h5>
              <div class="account-statistics-item__description text-small">Місце в рейтингу</div>
            </div>
          </div>

          <div class="account-block">
            <h5 class="account-block__title text">Останні завданя</h5>
        
            <div class="account-last-tasks__items">
              <div class="status-line account-last-tasks-item account-last-tasks-item_minimal">
                <div class="status-line-indicator status-line-indicator_green"></div>
                <div class="account-last-tasks-item__body">
                  <div class="account-last-tasks-item__content">
                    <h6 class="account-last-tasks-item__title text">Відкритий</h6>
                  </div>
        
                  <div class="account-last-tasks-item__details">
                    <div class="text-small color-orange">+5</div>
                    <button class="account-last-tasks-item__link">
                      <span class="icon-play-triangle-right"></span>
                    </button>
                  </div>
                </div>
              </div>
        
              <div class="status-line account-last-tasks-item">
                <div class="status-line-indicator status-line-indicator_orange"></div>
                <div class="account-last-tasks-item__body">
                  <div class="account-last-tasks-item__content">
                    <div class="account-last-tasks-item__pretitle text-small color-primary">
                      Поток Crypto education Factory от Crypto |  Sjft  | Tools
                    </div>
                    <h6 class="account-last-tasks-item__title text">DEX  обзор universety tools</h6>
                    <div class="account-last-tasks-item__subtitle text-small">
                      Відкритий
                    </div>
                  </div>
        
                  <div class="account-last-tasks-item__details">
                    <div class="text-small color-orange">+5</div>
                    <button class="account-last-tasks-item__link">
                      <span class="icon-play-triangle-right"></span>
                    </button>
                  </div>
                </div>
              </div>
        
              <div class="status-line account-last-tasks-item">
                <div class="status-line-indicator status-line-indicator_red"></div>
                <div class="account-last-tasks-item__body">
                  <div class="account-last-tasks-item__content">
                    <div class="account-last-tasks-item__pretitle text-small color-primary">
                      Поток Crypto education Factory от Crypto |  Sjft  | Tools
                    </div>
                    <h6 class="account-last-tasks-item__title text">DEX  обзор universety tools</h6>
                    <div class="account-last-tasks-item__subtitle text-small">
                      Закрытый
                    </div>
                  </div>
        
                  <div class="account-last-tasks-item__details">
                    <div class="text-small color-orange">+5</div>
                    <button class="account-last-tasks-item__link">
                      <span class="icon-play-triangle-right"></span>
                    </button>
                  </div>
                </div>
              </div>
        
              <div class="status-line account-last-tasks-item">
                <div class="status-line-indicator status-line-indicator_red"></div>
                <div class="account-last-tasks-item__body">
                  <div class="account-last-tasks-item__content">
                    <div class="account-last-tasks-item__pretitle text-small color-primary">
                      Поток Crypto education Factory от Crypto |  Sjft  | Tools
                    </div>
                    <h6 class="account-last-tasks-item__title text">DEX  обзор universety tools</h6>
                    <div class="account-last-tasks-item__subtitle text-small">
                      Закрытый
                    </div>
                  </div>
        
                  <div class="account-last-tasks-item__details">
                    <div class="text-small color-orange">+5</div>
                    <button class="account-last-tasks-item__link">
                      <span class="icon-play-triangle-right"></span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
        
            <button class="account-more">
              <span class="text-small color-primary">Показати ще</span>
              <span class="icon-arrow-right-small color-orange account-more__icon"></span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
